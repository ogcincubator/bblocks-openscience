{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Schema for EarthCODE Workflow",
  "allOf": [
    {
      "anyOf": [
        {
          "$ref": "https://ogcincubator.github.io/geodcat-ogcapi-records/build/annotated/geo/geodcat/geodcat-records/schema.json"
        }
      ]
    }
  ],
  "properties": {
    "properties": {
      "type": "object",
      "required": [
        "osc:project"
      ],
      "properties": {
        "osc:project": {
          "$ref": "https://ahaywardtvuk.github.io/bblocks-openscience/build/annotated/osc/geodcat-stac-earthcode/common/schema.json#/$defs/osc:project"
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "title": "Other Link",
            "properties": {
              "rel": {
                "not": {
                  "enum": [
                    "via"
                  ]
                }
              }
            }
          },
          {
            "$ref": "https://ahaywardtvuk.github.io/bblocks-openscience/build/annotated/osc/geodcat-stac-earthcode/common/schema.json#/$defs/via_links"
          }
        ]
      }
    }
  }
}